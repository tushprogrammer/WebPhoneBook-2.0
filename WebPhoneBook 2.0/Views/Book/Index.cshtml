@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Записная книжка</h1>
</div>

<table class="table">
            <th ad class="thead-light"></th>
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Отчество</th>
                    <th>Номер телефона</th>
                    <th>Адрес жительства</th>
                    <th>Описание</th>
                   </tr>
